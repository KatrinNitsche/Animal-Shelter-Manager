@model SettingsModel
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Settings for '@Model.Title'</h1>

<form method="post" action="/Settings/Save">

    <div class="col-6">
        <div class="card">
            <div class="card-header">
               <h3>Address</h3>
            </div>

            <div class="card-body">

                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="address1">Address Line 1</label>
                        <input type="text" class="form-control" id="addressLine1" asp-for="Line1" >
                    </div>
                </div>

                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="address2">Address Line 2</label>
                        <input type="text" class="form-control" id="addressLine2" asp-for="Line2" >
                    </div>
                </div>

                <div class="row col-12">

                    <div class="form-group col-4">
                        <label for="Postcode">Postcode</label>
                        <input type="text" class="form-control" id="Postcode" asp-for="PostCode" >
                    </div>

                    <div class="form-group col-8">
                        <label for="City">City</label>
                        <input type="text" class="form-control" id="City" asp-for="City" >
                    </div>
                </div>

                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="Country">Country</label>
                        <input type="text" class="form-control" id="Country" asp-for="Country" >
                    </div>
                </div>
            </div>


            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>

